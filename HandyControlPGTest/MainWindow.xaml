<Window x:Class="HandyControlPGTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandyControlPGTest"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="MainWindow" 
        d:DesignWidth="200"
        >
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <hc:ThemeResources RequestedTheme="Dark"/>
                <hc:Theme/>

            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>

    </Window.Resources>
    <hc:ScrollViewer>
        <StackPanel  Background="{DynamicResource RegionBrush}">

            <local:ListEditorView ItemsSource="{Binding ModelList}"/>
            <hc:PropertyGrid SelectedObject="{Binding DemoModel}"/>
            <TextBox Background="Green" Text="{Binding DemoModel.Integer.Val}"/>
            <TextBox Background="Red" Text="{Binding DemoModel.String}"/>

        </StackPanel>
    </hc:ScrollViewer>
</Window>
