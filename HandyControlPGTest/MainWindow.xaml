<Window x:Class="HandyControlPGTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandyControlPGTest"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="MainWindow" >
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <hc:ScrollViewer>
        <StackPanel>
            <TreeView>
                <TreeViewItem>
                    <hc:PropertyGrid SelectedObject="{Binding DemoModel}"/>
                </TreeViewItem>
            </TreeView>
            <ListView ItemsSource="{Binding DemoModel.List2}" MinWidth="6">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80" 
                                        Header="title1"
                                        DisplayMemberBinding="{Binding }"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <hc:PropertyGrid SelectedObject="{Binding DemoModel}"/>
        </StackPanel>
    </hc:ScrollViewer>
</Window>
