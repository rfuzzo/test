<UserControl x:Class="HandyControlPGTest.ListEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HandyControlPGTest" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel>
            <Button HorizontalAlignment="Right" Content="This Opens The Popup"/>
            <ListBox>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <hc:PropertyGrid></hc:PropertyGrid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBoxItem></ListBoxItem>
                
            </ListBox>
            
        </StackPanel>
    </Grid>
    
</UserControl>
